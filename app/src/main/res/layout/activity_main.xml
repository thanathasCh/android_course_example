<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnListView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ListView Example" />

            <Button
                android:id="@+id/btnRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recycler Example" />

            <Button
                android:id="@+id/btnFragment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment 1 Example" />

            <Button
                android:id="@+id/btnFragment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fragment 2 Example" />

            <Button
                android:id="@+id/btnButtomNavigation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buttom Navigation Example" />

            <Button
                android:id="@+id/btnApiCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Api Call Example" />

            <Button
                android:id="@+id/btnUniversity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Universities" />

            <Button
                android:id="@+id/btnLoginPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login Page" />

            <Button
                android:id="@+id/btnResponsive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Responsive UI" />

            <Button
                android:id="@+id/btnSearchableRecycler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searchable Recycler" />

            <Button
                android:id="@+id/btnFirebase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Firebase" />

            <Button
                android:id="@+id/btnGPS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GPS" />

            <Button
                android:id="@+id/btnCamera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera" />

            <Button
                android:id="@+id/btnNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification" />

            <Button
                android:id="@+id/btnGoogleMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google Map" />
        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
